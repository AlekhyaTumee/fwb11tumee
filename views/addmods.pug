extends layout

block content
  h1= title
  p Rows: #{query.rows}, Columns: #{query.cols}
  - var rows = Number(query.rows)
  - var cols = Number(query.cols) 
  if!(Number.isInteger(rows)) ||!(Number.isInteger(cols))
   p Number of rows: #{rows} or col: #{cols} is not an integer 
  else if(1>rows||rows>6) 
   p Number of rows: #{rows} is out of range 
  else if(1>cols||cols>6) 
   p Number of rows: #{cols} is out of range 
  else 
   table#outer 
    - for(let i=0;i<rows;i++){
     tr#middle 
      - for(let j=0;j<cols;j++){
       td=((i+j)%rows)
      -}
    -}